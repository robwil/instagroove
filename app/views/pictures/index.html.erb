<h1>Listing pictures</h1>

<div id="pictures-container">

    <% pretty_color_i = 0 %>
    <% @pictures.each_with_index do |picture, i| %>

      <div class="item pretty-color-<%= i % 4 %>">
        <h1><%= picture.title %></h1>
        <p><%= image_tag picture.pic.url %></p>
        <%= link_to 'Show', picture %>
        <%= link_to 'Edit', edit_picture_path(picture) %>
        <%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>

    <% end %>

</div>

<div class="clearboth"></div>
