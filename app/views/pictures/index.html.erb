<h1>Listing pictures</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>


    <% @pictures.each do |picture| %>

        <h1><%= picture.title %></h1>
        <p><%= image_tag picture.pic.url %></p>
        <p>Likes: <%= picture.likes %>
        <%= button_to '+1', likes_path(picture_id: picture.id), method: :post %></p>
        <%= link_to 'Show', picture %>
        <%= link_to 'Edit', edit_picture_path(picture) %>
        <%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %>

    <% end %>


<br>

<%= link_to 'New Picture', new_picture_path %>
